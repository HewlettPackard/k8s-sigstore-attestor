#!/bin/sh

source init-kubectl
source check_for_workload_svid

#check_for_workload_svid_multiple_containers "spiffe://example.org/ns/default/sa/default/workload-multiple-containers" example-multiple-containers example-multiple-containers-2
CONTAINERS_ARRAY="
    example-multiple-containers-1
    example-multiple-containers-2    
"
for i in $CONTAINERS_ARRAY; do
    check_for_workload_svid_multiple_containers "spiffe://example.org/ns/default/sa/default/workload-multiple-containers" example-multiple-containers $i
    if [ "${DONE}" -eq 1 ]; then
        log-info "SPIFFE ID FOUND"
    elif [ "${DONE}" -eq 0 ]; then
        fail-now "timed out waiting for workload to obtain credentials."
    else
        fail-now "failed to check for svid"
    fi
done